# ~/.zshrc: user-wide .zshrc file for zsh(1).
#
# This file is sourced only for interactive shells. It
# should contain commands to set up aliases, functions,
# options, key bindings, etc.
#
# Global Order: zshenv, zprofile, zshrc, zlogin

# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.zshrc.
# Initialization code that may require console input (password prompts, [y/n]
# confirmations, etc.) must go above this block; everything else may go below.
if [[ -r "${XDG_CACHE_HOME:-"${HOME}/.cache"}/p10k-instant-prompt-${USER}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-"${HOME}/.cache"}/p10k-instant-prompt-${USER}.zsh"
fi

function path-pretty() {
  echo ${@} |
    awk -v RS=':' -- 'NF' |
    xargs --no-run-if-empty realpath |
    awk -v ORS=':' -- '!count[$0]++'
}

function path-contain() {
  local -a path_arr=($(echo ${1} | awk -v RS=':' -- '$0'))
  local -A path_map
  for p in ${path_arr[@]}; do
    if [[ ${2} == ${p} ]]; then
      return 0
    fi
  done
  return 1
}

export PATH="$(path-pretty ${PATH})"
export PATH="${PATH%':'}"
export FPATH="$(path-pretty ${FPATH})"
export MANPATH="$(path-pretty ${MANPATH})"
export INFOPATH="$(path-pretty ${INFOPATH})"

ulimit -n $(ulimit -H -n)
umask -S u=rwx,g=rx,o=rx

# https://mirrors.tuna.tsinghua.edu.cn/help/homebrew/
export HOMEBREW_BREW_GIT_REMOTE="https://mirrors.tuna.tsinghua.edu.cn/git/homebrew/brew.git"
export HOMEBREW_CORE_GIT_REMOTE="https://mirrors.tuna.tsinghua.edu.cn/git/homebrew/homebrew-core.git"
# https://mirrors.tuna.tsinghua.edu.cn/help/homebrew-bottles/
export HOMEBREW_BOTTLE_DOMAIN="https://mirrors.tuna.tsinghua.edu.cn/homebrew-bottles"
# brew
if ! command -v brew > /dev/null 2>&1; then
  eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"
  export FPATH="${HOMEBREW_PREFIX}/share/zsh/site-functions:${FPATH}"
fi

# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/home/liblaf/.local/opt/conda/bin/conda' 'shell.zsh' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
  eval "$__conda_setup"
else
  if [ -f "/home/liblaf/.local/opt/conda/etc/profile.d/conda.sh" ]; then
    . "/home/liblaf/.local/opt/conda/etc/profile.d/conda.sh"
  else
    export PATH="/home/liblaf/.local/opt/conda/bin:$PATH"
  fi
fi
unset __conda_setup
# <<< conda initialize <<<

# pnpm
if [[ -z ${PNPM_HOME} ]]; then
  export PNPM_HOME="${HOME}/.local/share/pnpm"
  export PATH="${PNPM_HOME}:${PATH}"
fi
# pnpm end

if ! path-contain "${PATH}" "${HOME}/.local/bin"; then
  export PATH="${HOME}/.local/bin:${PATH}"
fi

if command -v wakatime-cli > /dev/null 2>&1; then
  export ZSH_WAKATIME_BIN="$(which wakatime-cli)"
fi

export ZSH="${HOME}/.oh-my-zsh"
export ZSH_CUSTOM="${ZSH}/custom"
ZSH_THEME="powerlevel10k/powerlevel10k"

plugins=(
  aliases
  brew
  colored-man-pages
  command-not-found
  common-aliases
  cp
  extract
  git
  perms
  tmux
  universalarchive
  zoxide

  conda-zsh-completion
  wakatime
  zsh-autocomplete
  zsh-bitwarden
  zsh-proxy
  zsh-syntax-highlighting

  completion
  ipkg
  my-aliases
  ntp
  rclone
)

ipkg_loads=(
  docker
  llvm
)

source "${ZSH}/oh-my-zsh.sh"

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

export PATH="$(path-pretty ${PATH})"
export PATH="${PATH%':'}"
export FPATH="$(path-pretty ${FPATH})"
export MANPATH="$(path-pretty ${MANPATH})"
export INFOPATH="$(path-pretty ${INFOPATH})"
