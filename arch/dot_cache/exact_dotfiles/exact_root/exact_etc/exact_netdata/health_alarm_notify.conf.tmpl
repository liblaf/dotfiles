SEND_TELEGRAM="YES"
TELEGRAM_BOT_TOKEN='{{ (rbwFields "Telegram").NETDATA_BOT_TOKEN.value }}'
DEFAULT_RECIPIENT_TELEGRAM='{{ (rbwFields "Telegram").CHAT_ID.value }}'
