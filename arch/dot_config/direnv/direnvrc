function layout_conda() {
  local activate=/opt/miniconda3/bin/activate
  if [[ -n $1 ]]; then
    local env=$1
  else
    local env=$(basename "$PWD")
  fi
  source "$activate" "$env"
}

function layout_micromamba() {
  if [[ -n $1 ]]; then
    local env=$1
  else
    local env=$(basename "$PWD")
  fi
  source <(micromamba shell activate "$env")
}
