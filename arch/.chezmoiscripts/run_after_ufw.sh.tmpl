#!/bin/bash
set -o nounset

{{ include "other/scripts/init.sh" }}

sudo chmod --verbose "u=rw,g=r,o=" /etc/ufw/*.rules
run sudo ufw --force reset
run sudo find /etc/ufw -regextype gnu-awk -regex ".*.[[:digit:]]{8}_[[:digit:]]{6}" -delete
run sudo ufw default deny
run sudo ufw allow 32768:65535/tcp
yes | run sudo ufw enable
