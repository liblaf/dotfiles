#!/bin/bash
set -o errexit
set -o nounset
set -o pipefail

{{include "other/scripts/init.sh"}}

if ! {{.alist}}; then
  exit 0
fi

sudo systemctl stop alist.service
sudo dasel put --file="/var/lib/alist/config.json" --selector=".site_url" --value="https://alist.liblaf.me"
run sudo systemctl enable --now alist.service
