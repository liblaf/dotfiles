<?xml version="1.0" encoding="UTF-8"?>
<!-- ref: https://wiki.archlinux.org/title/XDG_MIME_Applications -->
<mime-info xmlns="http://www.freedesktop.org/standards/shared-mime-info">
  <!-- https://en.wikipedia.org/wiki/PLY_(file_format) -->
  <mime-type type="model/x-ply">
    <comment>Polygon File</comment>
    <generic-icon name="model" />
    <glob-deleteall />
    <glob pattern="*.ply" />
  </mime-type>
  <!-- ref: https://docs.vtk.org/en/latest/design_documents/VTKFileFormats.html -->
  <mime-type type="model/vnd.vti+xml">
    <comment>Serial vtkImageData (structured)</comment>
    <sub-class-of type="application/xml" />
    <generic-icon name="model" />
    <glob-deleteall />
    <glob pattern="*.vti" />
  </mime-type>
  <mime-type type="model/vnd.vtp+xml">
    <comment>Serial vtkPolyData (unstructured)</comment>
    <sub-class-of type="application/xml" />
    <generic-icon name="model" />
    <glob-deleteall />
    <glob pattern="*.vtp" />
  </mime-type>
  <mime-type type="model/vnd.vtu+xml">
    <comment>Serial vtkUnstructuredGrid (unstructured)</comment>
    <sub-class-of type="application/xml" />
    <generic-icon name="model" />
    <glob-deleteall />
    <glob pattern="*.vtu" />
  </mime-type>
</mime-info>
