# -*- mode: properties; -*-
# ref: <https://git-scm.com/docs/git-config>

[alias]
# ref: <https://difftastic.wilfred.me.uk/git.html>
dft = -c diff.external='~/.config/git/diff.sh' diff
dl = -c diff.external='~/.config/git/diff.sh' log --ext-diff
ds = -c diff.external='~/.config/git/diff.sh' show --ext-diff

[commit]
gpgSign = true

[core]
pager = ov --quit-if-one-screen
quotePath = false

[credential "https://gist.github.com"]
helper = !gh auth git-credential

[credential "https://github.com"]
helper = !gh auth git-credential

[credential "https://gitlab.com"]
helper = !glab auth git-credential

[fetch]
parallel = 0

[filter "lfs"]
clean = git-lfs clean -- %f
process = git-lfs filter-process
required = true
smudge = git-lfs smudge -- %f

[http]
# ref: <https://stackoverflow.com/a/78845598/18410348>
postBuffer = 104857600

[init]
defaultBranch = main
templateDir = ~/.config/git/templates

[pager]
diff = ov --quit-if-one-screen --section-delimiter ' --- \\w+$'
log = ov --quit-if-one-screen --section-delimiter '^commit ' --section-header-num 3
show = ov --quit-if-one-screen --header 3

[push]
autoSetupRemote = true

[status]
relativePaths = false

[submodule]
fetchJobs = 0

[user]
email = 30631553+liblaf@users.noreply.github.com
name = liblaf
signingKey = 31D2E2AE960E5F8C
