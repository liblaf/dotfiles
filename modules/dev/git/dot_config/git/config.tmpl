# -*- mode: ini; -*-
# ref: <https://git-scm.com/docs/git-config>

[commit]
gpgSign = true

[core]
pager = ov --quit-if-one-screen
quotePath = false

[credential "https://gist.github.com"]
helper = !gh auth git-credential

[credential "https://github.com"]
helper = !gh auth git-credential

[credential "https://gitlab.com"]
helper = !glab auth git-credential

[diff "difftastic"]
command = difft

[fetch]
parallel = 0

# generated by `git lfs install`
[filter "lfs"]
clean = git-lfs clean -- %f
process = git-lfs filter-process
required = true
smudge = git-lfs smudge -- %f

[http]
# ref: <https://stackoverflow.com/a/78845598/18410348>
postBuffer = 104857600

[init]
defaultBranch = main
templateDir = {{ .chezmoi.homeDir }}/.config/git/templates

[lfs]
locksverify = true

[pager]
diff = ov --quit-if-one-screen --view-mode 'git-diff'
log = ov --quit-if-one-screen --view-mode 'git-log'
show = ov --quit-if-one-screen --view-mode 'git-show'

[push]
autoSetupRemote = true

[status]
relativePaths = false

[submodule]
fetchJobs = 0

[tag]
gpgSign = true

