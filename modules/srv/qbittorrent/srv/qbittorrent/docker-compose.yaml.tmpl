# -*- mode: yaml; -*-
# yaml-language-server: $schema=https://raw.githubusercontent.com/compose-spec/compose-go/master/schema/compose-spec.json

# ref: <https://github.com/linuxserver/docker-qbittorrent>
# ref: <https://github.com/VueTorrent/VueTorrent/wiki/Installation>

services:
  qbittorrent:
    container_name: qbittorrent
    environment:
      DOCKER_MODS: ghcr.io/vuetorrent/vuetorrent-lsio-mod:latest
      PGID: "{{ .services.gid }}"
      PUID: "{{ .services.qbittorrent.uid }}"
      TORRENTING_PORT: "{{ .services.qbittorrent.port }}"
      UMASK: "002"
      WEBUI_PORT: "{{ .services.qbittorrent_webui.port }}"
    image: lscr.io/linuxserver/qbittorrent:latest
    ports:
      - "{{ .services.qbittorrent.port }}:{{ .services.qbittorrent.port }}/tcp"
      - "{{ .services.qbittorrent.port }}:{{ .services.qbittorrent.port }}/udp"
      - "{{ .services.qbittorrent_webui.port }}:{{ .services.qbittorrent_webui.port }}/tcp"
      - "{{ .services.qbittorrent_webui.port }}:{{ .services.qbittorrent_webui.port }}/udp"
    pull_policy: weekly
    restart: unless-stopped
    volumes:
      - ./config:/config
      - type: bind
        source: /mnt/data/srv/qbittorrent/downloads
        target: /downloads
        bind:
          create_host_path: false

networks:
  default:
    enable_ipv6: true
