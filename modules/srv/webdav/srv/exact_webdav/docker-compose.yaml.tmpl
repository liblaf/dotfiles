# -*- mode: yaml; -*-
# yaml-language-server: $schema=https://raw.githubusercontent.com/compose-spec/compose-go/master/schema/compose-spec.json

# ? Setting user other than root will cause permission issues.

name: WebDAV

services:
  webdav:
    command: serve webdav tsinghua:/webdav --addr ':8080'
    container_name: webdav
    image: rclone/rclone:latest
    ports:
      - "{{ .ports.webdav }}:8080"
    pull_policy: weekly
    restart: unless-stopped
    volumes:
      - type: bind
        source: "{{ .chezmoi.homeDir }}/.config/rclone/rclone.conf"
        target: /.config/rclone/rclone.conf
        read_only: true
        bind:
          create_host_path: false
