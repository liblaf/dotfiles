<?xml version="1.0" encoding="UTF-8"?>
<!-- ref: https://wiki.archlinux.org/title/XDG_MIME_Applications -->
<mime-info xmlns="http://www.freedesktop.org/standards/shared-mime-info">
  <!-- ref: https://en.wikipedia.org/wiki/PLY_(file_format) -->
  <mime-type type="model/x-ply">
    <comment>Polygon File</comment>
    <generic-icon name="model" />
    <glob-deleteall />
    <glob pattern="*.ply" />
  </mime-type>

  <mime-type type="model/vnd.pvd+xml">
    <comment>ParaView Data Files</comment>
    <sub-class-of type="application/xml" />
    <generic-icon name="model" />
    <glob-deleteall />
    <glob pattern="*.pvd" />
  </mime-type>

  <!-- ref: https://docs.vtk.org/en/latest/design_documents/VTKFileFormats.html -->
  <mime-type type="model/vnd.vti+xml">
    <comment>VTK ImageData Files</comment>
    <sub-class-of type="application/xml" />
    <generic-icon name="model" />
    <glob-deleteall />
    <glob pattern="*.vti" />
    <glob pattern="*.vti.series" />
  </mime-type>
  <mime-type type="model/vnd.vtp+xml">
    <comment>VTK PolyData Files</comment>
    <sub-class-of type="application/xml" />
    <generic-icon name="model" />
    <glob-deleteall />
    <glob pattern="*.vtp" />
    <glob pattern="*.vtp.series" />
  </mime-type>
  <mime-type type="model/vnd.vtu+xml">
    <comment>VTK UnstructuredGrid Files</comment>
    <sub-class-of type="application/xml" />
    <generic-icon name="model" />
    <glob-deleteall />
    <glob pattern="*.vtu" />
    <glob pattern="*.vtu.series" />
  </mime-type>

</mime-info>
