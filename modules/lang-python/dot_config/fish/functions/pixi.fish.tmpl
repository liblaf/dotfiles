function pixi --wrap="pixi"
    set --local MIRROR_PYPI '{{ .mirrors.pypi }}'
    set --local GIT_ROOT (git rev-parse --show-toplevel 2> /dev/null || pwd)
    set --local PIXI_LOCK "$GIT_ROOT/pixi.lock"
    command pixi $argv
    if test -f "$PIXI_LOCK"
        sd 'https://[\.\w/]+/simple' 'https://pypi.org/simple' "$PIXI_LOCK"
        sd 'https://[\.\w/]+/packages' 'https://files.pythonhosted.org/packages' "$PIXI_LOCK"
    end
end
