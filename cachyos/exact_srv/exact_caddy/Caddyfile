# -*- mode: caddyfile; -*-
{
	http_port {$HTTP_PORT}
	https_port {$HTTPS_PORT}
	# All zones - Zone:Read, DNS:Edit
	acme_dns cloudflare {env.CLOUDFLARE_API_TOKEN}
}

gpt.{$BASE_DOMAIN} {
	reverse_proxy localhost:{$GPT_ACADEMIC_PORT}
}

mlflow.{$BASE_DOMAIN} {
	reverse_proxy localhost:{$MLFLOW_PORT}
}

pdf.{$BASE_DOMAIN} {
	reverse_proxy localhost:{$STIRLING_PDF_PORT}
}

restic.{$BASE_DOMAIN} {
	basic_auth {
		{$RESTIC_USERNAME} {$RESTIC_HASHED_PASSWORD}
	}
	reverse_proxy localhost:{$RESTIC_PORT}
}

webdav.{$BASE_DOMAIN} {
	basic_auth {
		{$WEBDAV_USERNAME} {$WEBDAV_HASHED_PASSWORD}
	}
	reverse_proxy localhost:{$WEBDAV_PORT}
}
