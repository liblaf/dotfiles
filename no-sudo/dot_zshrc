case ":${PATH}:" in
  *":${HOME}/.local/bin:"*) ;;
  *) export PATH="${HOME}/.local/bin:${PATH}" ;;
esac

export ZSH="${HOME}/.local/chezmoi/oh-my-zsh"
export ZSH_THEME="starship"
export ZSH_CUSTOM="${HOME}/.oh-my-zsh/custom"

plugins=(
  aliases
  # colored-man-pages
  command-not-found
  common-aliases
  cp
  extract
  git
  perms
  tmux
  universalarchive
  # zoxide

  conda-zsh-completion
  # wakatime
  zsh-autocomplete
  zsh-bitwarden
  zsh-syntax-highlighting

  colors
  completions
  my-aliases
  proxy
  rclone
)

ZSH_CACHE_DIR="${HOME}/.cache/zsh"
if [[ ! -d ${ZSH_CACHE_DIR} ]]; then
  mkdir --parents "${ZSH_CACHE_DIR}"
fi

source "${ZSH}/oh-my-zsh.sh"

export GPG_TTY="$(tty)"
