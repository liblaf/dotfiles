[ -f "/opt/miniconda3/etc/profile.d/conda.sh" ] && source "/opt/miniconda3/etc/profile.d/conda.sh"

{{ template "load-pnpm.sh" }}

{{ template "load-local-bin.sh" }}

export ZSH="${HOME}/.local/chezmoi/ohmyzsh"
export ZSH_THEME="starship"
export ZSH_CUSTOM="${HOME}/.oh-my-zsh/custom"

plugins=(
  aliases
  # colored-man-pages
  command-not-found
  common-aliases
  cp
  extract
  git
  perms
  tmux
  universalarchive
  zoxide

  conda-zsh-completion
  # wakatime
  zsh-autocomplete
  zsh-bitwarden
  zsh-syntax-highlighting

  colors
  completions
  my-aliases
  proxy
  rclone
)

ZSH_CACHE_DIR="${HOME}/.cache/zsh"
if [[ ! -d ${ZSH_CACHE_DIR} ]]; then
  mkdir --parents "${ZSH_CACHE_DIR}"
fi

source "${ZSH}/oh-my-zsh.sh"

export GPG_TTY="$(tty)"
