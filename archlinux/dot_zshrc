[ -f "/opt/miniconda3/etc/profile.d/conda.sh" ] && source "/opt/miniconda3/etc/profile.d/conda.sh"

# pnpm
export PNPM_HOME="/home/liblaf/.local/share/pnpm"
case ":${PATH}:" in
  *":${PNPM_HOME}:"*) ;;
  *) export PATH="${PNPM_HOME}:${PATH}" ;;
esac
# pnpm end

case ":${PATH}:" in
  *":${HOME}/.local/bin:"*) ;;
  *) export PATH="${HOME}/.local/bin:${PATH}" ;;
esac

export ZSH="${HOME}/.local/chezmoi/ohmyzsh"
export ZSH_THEME="starship"
export ZSH_CUSTOM="${HOME}/.oh-my-zsh/custom"

plugins=(
  aliases
  # colored-man-pages
  command-not-found
  common-aliases
  cp
  extract
  git
  perms
  tmux
  universalarchive
  zoxide

  conda-zsh-completion
  wakatime
  zsh-autocomplete
  zsh-bitwarden
  zsh-syntax-highlighting

  colors
  completions
  my-aliases
  proxy
  rclone
)

ZSH_CACHE_DIR="${HOME}/.cache/zsh"
if [[ ! -d ${ZSH_CACHE_DIR} ]]; then
  mkdir --parents "${ZSH_CACHE_DIR}"
fi

source "${ZSH}/oh-my-zsh.sh"

export GPG_TTY="$(tty)"
