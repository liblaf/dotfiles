zstyle ":omz:update" mode disabled

{{ template "load-conda.sh" }}
{{ template "load-direnv.sh" }}
{{ template "load-local-bin.sh" }}
{{ template "load-pnpm.sh" }}

export ZSH="${HOME}/.oh-my-zsh"
export ZSH_CUSTOM="${ZSH}/custom"
export ZSH_THEME="starship"

plugins=(
  aliases
  # colored-man-pages
  command-not-found
  common-aliases
  cp
  extract
  git
  perms
  tmux
  universalarchive
  zoxide

  conda-zsh-completion
  pnpm-shell-completion
  # wakatime
  zsh-autocomplete
  zsh-bitwarden
  zsh-syntax-highlighting

  colors
  completions
  my-aliases
  proxy
  rclone
  upload
)

ZSH_CACHE_DIR="${HOME}/.cache/zsh"
if [[ ! -d ${ZSH_CACHE_DIR} ]]; then
  mkdir --parents "${ZSH_CACHE_DIR}"
fi

source "${ZSH}/oh-my-zsh.sh"

export GPG_TTY="$(tty)"
