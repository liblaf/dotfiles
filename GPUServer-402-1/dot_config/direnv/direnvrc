function layout_conda() {
  if [[ -f "/opt/miniconda3/bin/activate" ]]; then
    local activate="/opt/miniconda3/bin/activate"
  else
    local activate="${HOME}/.local/opt/conda/bin/activate"
  fi
  if [[ -n ${1} ]]; then
    local env_name="${1}"
  else
    local env_name="$(basename "$(pwd)")"
  fi
  source "${activate}" "${env_name}"
}
